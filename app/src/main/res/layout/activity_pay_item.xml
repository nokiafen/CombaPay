<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       android:id="@+id/rel_viewContent"
        >

    <ImageView
        android:id="@+id/payArrow"
        android:src="@drawable/arrows_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/payImage"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rel"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/payImage"
        android:layout_toEndOf="@+id/payImage"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        >

        <TextView
            android:layout_marginTop="6dip"
            android:id="@+id/payContent"
            android:text="推荐有支付宝账号的用户使用"
            android:layout_below="@+id/payTitle"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#888888"
            />

        <TextView
            android:id="@+id/payTitle"
            android:text="支付宝支付"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            />


    </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"
        android:layout_below="@+id/rel_viewContent"
        android:layout_marginLeft="80dp"
        android:id="@+id/view_bottom_line"
        >

    </View>

</RelativeLayout>